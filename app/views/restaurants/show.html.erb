<div class="container">
  <h1 class="text-center mt-5"><%= @restaurant.name %></h1>
  <h4 class="text-center mt-3"><em><%= @restaurant.category.capitalize %></em></h4>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <br>

  <h4>Reviews</h4>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>

  <br>

  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
  <%= link_to 'Back to restaurants list', restaurants_path, class: 'btn btn-outline-primary' %>
</div>
