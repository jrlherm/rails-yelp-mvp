<div class="container">
  <h1 class="text-center m-5">Restaurant index</h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
      <li class="restaurant d-flex justify-content-between align-items-center mb-5 p-4 rounded border">
        <p><strong><%= restaurant.name %></strong> - <em><%= restaurant.category %></em></p>
        <%= link_to 'Restaurant details', restaurant_path(restaurant), class: 'btn btn-outline-primary btn-sm' %>
      </li>
    <% end %>
  </ul>

  <div class="text-right">
    <%= link_to 'Add a new restaurant', new_restaurant_path, class: 'btn btn-primary' %>
  </div>
</div>
